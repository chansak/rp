@*@model RP.Website.Models.ListViewModel<RP.Website.Models.DocumentListItemViewModel>*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>ใบขอราคา</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Document",new { area = "Sale" })">หน้าแรก</a>
            </li>
            <li class="active">
                <strong>รายการใบขอราคา</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-9">
            <div class="ibox">
                <div class="ibox-content">
                    <span class="text-muted small pull-right">Last modification: <i class="fa fa-clock-o"></i> 2:10 pm - 12.06.2014</span>
                    <h2>&nbsp;</h2>
                    <div class="row">
                        <div class="col-sm-4">
                            <select class="form-control m-b" id="ddSearch">
                                <option value="CustomerName">ชื่อลูกค้า</option>
                                <option value="DocumentCode">เลขที่เอกสาร</option>
                            </select>
                        </div>
                        <div class="col-sm-8">
                            <div class="input-group">
                                <input type="text" id="keyword" placeholder="ค้นหา" class="input form-control">
                                <span class="input-group-btn">
                                    <button type="button" id="btnSearch" class="btn btn btn-primary"> <i class="fa fa-search"></i> Search</button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="clients-list">
                        <div id="tab-1" class="tab-pane active">
                            <div class="full-height-scroll">
                                <div class="table-responsive">
                                    <table id="table-quotation" class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th><div class="checkbox i-checks"><label> <input type="checkbox" value="" > <i></i></label></div></th>
                                                <th>ความสำคัญ</th>
                                                <th>ประเภทลูกค้า</th>
                                                <th>ชื่อโรงพยาบาล</th>
                                                <th>เลขที่เอกสาร</th>
                                                <th>ชื่อผู้เสนอขาย</th>
                                                <th>สถานะเวิร์คโฟล์</th>
                                                <th>สถานะการสั่งซื้อ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                    <div id="pager_quotation"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>จัดการใบขอราคา</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content float-e-margins">
                    @Html.ActionLink("สร้างใบขอราคา", "AddNew", null, new { @class = "btn btn-primary btn-xs" })
                    <button type="button" id="btnEdit" class="btn btn-white btn-xs">แก้ไข</button>
                    <button type="button" class="btn btn-white btn-xs btnDelete">ลบ</button>
                    <button type="button" class="btn btn-white btn-xs">คัดลอก</button>
                    <button type="button" class="btn btn-white btn-xs">ยื่นขออนุมัติ</button>
                    <button type="button" class="btn btn-white btn-xs">มอบหมาย</button>
                    <div class="btn-group">
                        <button data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle" aria-expanded="false">เปลี่ยนสถานะ</button>
                        <ul class="dropdown-menu" x-placement="bottom-start" style="position: absolute; top: 24px; left: 0px; will-change: top, left;">
                            <li><a class="dropdown-item" href="#">เปิดใช้งานใบขอราคา</a></li>
                            <li><a class="dropdown-item" href="#">ปิดใช้งานใบขอราคา</a></li>
                            <li><a class="dropdown-item" href="#">พักใบขอราคา</a></li>
                            <li><a class="dropdown-item" href="#">ยกเลิกใบขอราคา</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="ibox collapsed">
                <div class="ibox-title">
                    <h5>ตัวกรองข้อมูลแบบละเอียด</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="scroll_content">
                        <form role="form">
                            <div class="form-group">
                                <label>ประเภทลูกค้า</label>
                                <input type="text" placeholder="ประเภทลูกค้า" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>ชื่อโรงพยาบาล</label>
                                <input type="text" placeholder="ชื่อโรงพยาบาล" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>ปี</label>
                                <input type="text" placeholder="ปี" data-mask="99/99/9999" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>ชื่อผู้ติดต่อ</label>
                                <input type="text" placeholder="ชื่อผู้ติดต่อ" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>ราคาที่เคยเสนอ</label>
                                <input type="text" placeholder="ราคาที่เคยเสนอ" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>ระบุคำค้นหา</label>
                                <input type="text" placeholder="ระบุคำค้นหา" class="form-control">
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-10">
                                    <button class="btn btn-sm btn-primary" type="submit">ค้นหา</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
    @Styles.Render("~/Content/plugins/jqGrid/jqGridStyles")
    @Styles.Render("~/plugins/toastrStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/sweetAlert")
    @Scripts.Render("~/plugins/jqGrid")
    @Scripts.Render("~/plugins/toastr")

    <script type="text/javascript">
        $(document).ready(function () {
            documentList.init();
            $('.scroll_content').slimscroll({
                height: '500px'
            });
            $('.btnDelete').click(function () {
                swal({
                    title: "ยืนยันการลบข้อมูล?",
                    text: "คุณจะไม่สามารถกู้รายการนี้หลังจากลบไปแล้ว!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "ลบ!",
                    cancelButtonText: "ยกเลิก!",
                    closeOnConfirm: false,
                    closeOnCancel: false
                },
                    function (isConfirm) {
                        if (isConfirm) {
                            swal("ลบรายการเรียบร้อย!", "รายการนี้ถูกลบแล้ว", "success");
                        } else {
                            swal("ยกเลิกการลบแล้ว", "รายการนี้ถูกยกเลิกการลบ", "error");
                        }
                    });
            });
            $("#btnEdit").unbind("click");
            $("#btnEdit").click(function () {
                documentList.edit();
            });
            $("#btnSearch").click(function () {
                documentList.search();
            });
        });
    </script>
}
